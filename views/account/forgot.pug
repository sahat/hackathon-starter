extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Forgot Password
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    p.pb-4 Enter your email address below and we will send you password reset instructions.
    .form-group.row.mb-3
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') Email
      .col-md-7
        input#email.form-control(type='email', name='email', placeholder='Email', autofocus, autocomplete='email', required)
    .form-group.row
      .col-md-3
      .col-md-7
        button.btn.btn-primary(type='submit')
          i.fas.fa-key.fa-sm.mr-2.me-2
          | Reset Password
