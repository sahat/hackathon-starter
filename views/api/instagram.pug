extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h2
      i.fab.fa-instagram(style='color: #517fa4').fa-sm
      | Instagram API
  .btn-group.d-flex(role='group')
    a.btn.btn-primary(href='http://instagram.com/developer/', target='_blank').w-100
      i.far.fa-check-square.fa-sm
      | Overview
    a.btn.btn-primary(href='https://github.com/teleportd/instagram-node', target='_blank').w-100
      i.fas.fa-laptop.fa-sm
      | Node-Instagram Docs
    a.btn.btn-primary(href='http://instagram.com/developer/endpoints/', target='_blank').w-100
      i.fas.fa-code-branch.fa-sm
      | API Endpoints

  br
  p.lead Username Search for
    strong  richellemead
  table.table.table-hover.table-bordered
    thead
      tr
        th Picture
        th Username
        th Full Name
        th Bio
    tbody
      for user in usernames
        tr
          td
            img(src=user.profile_picture, width='75', height='75')
          td= user.username
          td= user.full_name
          td= user.bio

  hr
  p.lead User Search for ID
    strong  175948269

  .media
    a.float-left(href='http://instagram.com/' + userById.username)
      img.thumbnail(src=userById.profile_picture, width='110', height='110')
    .media-body
      h4= userById.full_name
      p= userById.bio

  hr
  p.lead
    | My Recent
    strong  Media
  .row
    for image in myRecentMedia
      .col-xs-3
        a.thumbnail(href=image.link)
          img(src=image.images.standard_resolution.url, height='320px')