extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h2
      i.fas.fa-upload.fa-sm.me-2
      | File Upload

  .btn-group.mb-4.d-flex(role='group')
    a.btn.btn-success.w-100(href='https://github.com/expressjs/multer', target='_blank')
      i.fas.fa-book.fa-sm.me-2
      | Multer Documentation
    a.btn.btn-success.w-100(href='http://codepen.io/search/pens?q=custom+file+upload&limit=all&type=type-pens', target='_blank')
      i.fas.fa-laptop.fa-sm.me-2
      | Customize File Upload

  h3 File Upload Form
  .row
    .col-md-6
      p All files will be uploaded to "/uploads" directory.
      form(role='form', enctype='multipart/form-data', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group.mb-3
          label.col-form-label.font-weight-bold File Input
          .col-md-6
            input(type='file', name='myFile')
        button.btn.btn-primary(type='submit') Submit
